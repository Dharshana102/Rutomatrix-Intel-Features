[Unit]
Description=First Boot Setup
After=network.target
[Service]
Type=oneshot
# Dynamically detect the user under /home and run the script
ExecStart=/bin/bash -c 'USER=$(cat /boot/firmware/rutomatrix_user); exec /home/$USER/scripts/first_boot_setup.sh'
RemainAfterExit=yes
[Install]
WantedBy=multi-user. Target
