[Unit]
Description=Postcode Flask Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=rpi
WorkingDirectory=/home/rpi/Postcode
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/rpi/Postcode/venv/bin/python /home/rpi/Postcode/app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
