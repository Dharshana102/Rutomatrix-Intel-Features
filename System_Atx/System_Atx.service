[Unit]
Description=System ATX Service
After=network-online.target
Wants=network-online.target
 
[Service]
Type=simple
User=root
Environment=PYTHONUNBUFFERED=1
ExecStart=/bin/bash -c 'USER=$(cat /boot/firmware/rutomatrix_user); exec /home/$USER/System_Atx/venv/bin/python /home/$USER/System_Atx/server.py'
Restart=always
RestartSec=3
 
[Install]
WantedBy=multi-user.target