[Unit]
Description=Bios Serial Log Flask Service
After=network-online.target
Wants=network-online.target
 
[Service]
Type=simple
User=root
Environment=PYTHONUNBUFFERED=1
ExecStart=/bin/bash -c 'USER=$(cat /boot/firmware/rutomatrix_user); exec /home/$USER/Bios_serial_log/venv/bin/python /home/$USER/Bios_serial_log/app.py'
Restart=always
RestartSec=3
 
[Install]
WantedBy=multi-user.target